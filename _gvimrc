set sessionoptions+=resize,tabpages,winsize,curdir	" setup row/column
set lines=999
set columns=115
set cmheight=1	" height of command line
set previewheight=5	" height of preview window
set quioptions-=T	" hide toolbar
set showcmd	" show current command in status line
set fuopt+=maxhorz

" set colors-------------------------------------
set background=light
colorscheme solarized
syntax on
" set transparency
set transparency=25
" disable vi compatibility
set nocompatible
" show line number
set number
" highlight corresponding brackets for 0.3s
set matchtime=3
