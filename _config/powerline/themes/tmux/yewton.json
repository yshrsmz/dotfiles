{
    "default_module": "powerline.segments.common",
    "segment_data": {
        "date": {
            "before": "⌚  "
        },
        "internal_ip": {
            "before": " ⓛ "
        },
        "external_ip": {
            "before": " ⓦ "
        }
    },
    "segments": {
        "left": [
            {
                "function": "hostname"
            },
            {
                "function": "internal_ip",
                "module": "ext.tmux.segments.common"
            },
            {
                "function": "external_ip",
                "args": {
                    "query_url": "http://whatismyip.akamai.com/"
                }
            },
            {
                "function": "branch"
            }
        ],
        "right": [
            {
                "function": "date",
                "module": "ext.tmux.segments.common",
                "args": {
                    "format": "%-m/%-d/(%a) %H:%M"
                }
            }
        ]
    }
}
